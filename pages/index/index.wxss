/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.btn{
  margin:20rpx;
  padding:10rpx;
  border: 1rpx solid #26ab28;
  border-radius: 20rpx;
  text-align: center;
  color: #26ab28;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-img{
  width: 50rpx;
  margin-right: 30rpx;
}
.btn-desc{
  font-size:10pt;
  margin-left:25rpx;
}